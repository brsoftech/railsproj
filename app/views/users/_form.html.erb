<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
	<div class="col-sm-6 form-container">
        <div class="well bs-component">
			<fieldset>
			<div class="form-group">
				<%= f.input :name, label: "Name:" %>
				<%= f.input :email %>
				<%= f.input :password_digest %>
				<%= f.button :submit %>
 			</div>
	</fieldset>
  </div>
</div>
  
<% end %>